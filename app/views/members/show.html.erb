<% @page_title = "会員の詳細" %>

<h1><%= @page_title %></h1>

<p><%= link_to "編集", [:edit, @member] %></p>

<table class= "attr">
    <tr>
        <th width= "150" style ="text-align: right">背番号</th>
        <td><%= @member.number %></td>
    </tr>
    <tr>
        <th style ="text-align: right">ユーザー名</th>
        <td><%= @member.name %></td>
    </tr>
    <tr>
        <th style ="text-align: right">氏名</th>
        <td><%= @member.full_name %></td>
    </tr>
    <tr>
        <th style ="text-align: right">性別</th>
        <td><%= @member.gender == 0 ? "男" : "女"  %></td>
    </tr>
    <tr>
        <th style ="text-align: right">誕生日</th>
        <td><%= @member.birthday.try(:strftime, "%Y年%m月%d日") %></td>
    </tr>
    <tr>
        <th style ="text-align: right">メールアドレス</th>
        <td><%= @member.email %></td>
    </tr>
    <tr>
        <th style ="text-align: right">管理者</th>
        <td><%= @member.administrator? ? "〇" : "－" %></td>
    </tr>
</table>

<p><%= link_to "会員名簿に戻る", :members %></p>